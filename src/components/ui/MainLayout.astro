---
import "@/styles/global.css";
import { Background } from "@/components/ui/Background";
import SEO from "@/components/ui/SEO.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Minecraft Plugin Config Generator",
  description = "Generate configurations for your favorite Minecraft plugins easily.",
  image,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <SEO {title} {description} {image} />
  </head>
  <body
    class="relative bg-background selection:bg-primary min-h-screen font-sans text-foreground selection:text-primary-foreground antialiased"
  >
    <Background client:only="react" />

    <header
      class="top-0 z-50 sticky bg-background/60 supports-backdrop-filter:bg-background/40 backdrop-blur-xl border-border/40 border-b w-full"
    >
      <div
        class="flex justify-between items-center px-4 md:px-8 max-w-screen-2xl h-16 container"
      >
        <a
          href="/"
          class="flex items-center space-x-2 bg-clip-text bg-linear-to-r from-blue-400 to-indigo-500 hover:opacity-80 font-bold text-transparent text-xl tracking-tight transition-opacity"
        >
          MC Config Gen
        </a>
        <nav
          class="flex items-center gap-6 font-medium text-muted-foreground text-sm"
        >
          <a href="/" class="hover:text-foreground transition-colors">Home</a>
        </nav>
      </div>
    </header>

    <main
      class="flex-1 mx-auto px-4 md:px-8 py-6 md:py-10 max-w-screen-2xl min-h-[calc(100vh-4rem-5rem)] container"
    >
      <slot />
    </main>

    <footer
      class="bg-background/50 backdrop-blur-sm mx-auto py-6 md:py-8 border-border/40 border-t max-w-screen-2xl"
    >
      <div
        class="md:flex-row flex-col justify-center items-center gap-4 px-4 md:px-8 md:h-16 container"
      >
        <p
          class="text-muted-foreground text-sm text-center text-balance leading-loose"
        >
          &copy; {new Date().getFullYear()} Minecraft Config Generator. Not affiliated
          with Mojang Studios.
        </p>
        <p
          class="text-muted-foreground text-sm text-center text-balance leading-loose"
        >
          Made with <span class="heart">ü§ç</span> by <a
            href="https://hsinghhira.me"
            target="_blank">Harman Singh Hira</a
          >
          in
          <a href="https://en.wikipedia.org/wiki/Aotearoa" target="_blank"
            >Aotearoa</a
          >
        </p>
      </div>
    </footer>
  </body>
</html>
