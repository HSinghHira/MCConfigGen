---
interface Props {
  label?: string;
  name: string;
  value?: string;
  required?: boolean;
  error?: string;
  helperText?: string;
  disabled?: boolean;
  className?: string;
}

const { 
  label, 
  name, 
  value = '#ffffff', 
  required = false, 
  error, 
  helperText,
  disabled = false,
  className = '' 
} = Astro.props;
---

<div class:list={['form-control', className]}>
  {label && (
    <label for={name} class="form-label">
      {label} {required && <span class="required">*</span>}
    </label>
  )}
  <div class="color-picker-wrapper">
    <input
      type="color"
      id={`${name}-picker`}
      value={value}
      disabled={disabled}
      class="color-input"
      onchange={`document.getElementById('${name}').value = this.value`}
    />
    <input
      type="text"
      id={name}
      name={name}
      value={value}
      placeholder="#000000"
      disabled={disabled}
      required={required}
      maxlength="7"
      class:list={[
        "text-input",
        error && "has-error",
        disabled && "is-disabled"
      ]}
      onchange={`document.getElementById('${name}-picker').value = this.value`}
    />
  </div>
  {error && <p class="form-error">{error}</p>}
  {helperText && !error && <p class="form-helper">{helperText}</p>}
</div>

<style>
  .form-control {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
  }

  .required {
    color: var(--color-danger);
  }

  .color-picker-wrapper {
    display: flex;
    gap: var(--spacing-2);
  }

  .color-input {
    width: 3rem;
    height: 2.5rem;
    padding: 0;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background: var(--color-surface);
    cursor: pointer;
  }
  
  .color-input:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

  .color-input::-webkit-color-swatch-wrapper {
    padding: 0.25rem;
  }
  
  .color-input::-webkit-color-swatch {
    border-radius: 0.25rem;
    border: none;
  }

  .text-input {
    flex: 1;
    padding: 0.5rem 0.75rem;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-text);
    transition: all 0.2s;
    font-family: var(--font-family-mono);
  }

  .text-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
  }

  .text-input.has-error {
    border-color: var(--color-danger);
  }

  .text-input.is-disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .form-error {
    font-size: 0.875rem;
    color: var(--color-danger);
    margin: 0;
  }

  .form-helper {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
  }
</style>
