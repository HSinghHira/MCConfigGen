---
interface Option {
  label: string;
  value: string | number;
}

interface Props {
  label?: string;
  name: string;
  options: Option[];
  value?: string | number;
  required?: boolean;
  error?: string;
  helperText?: string;
  disabled?: boolean;
  className?: string;
}

const { 
  label, 
  name, 
  options,
  value, 
  required = false, 
  error, 
  helperText,
  disabled = false,
  className = '' 
} = Astro.props;
---

<div class:list={['form-control', className]}>
  {label && (
    <label for={name} class="form-label">
      {label} {required && <span class="required">*</span>}
    </label>
  )}
  <div class="select-wrapper">
    <select
      id={name}
      name={name}
      disabled={disabled}
      required={required}
      class:list={[
        "form-select",
        error && "has-error",
        disabled && "is-disabled"
      ]}
    >
      <option value="" disabled selected={!value}>Select an option...</option>
      {options.map((opt) => (
        <option value={opt.value} selected={opt.value === value}>
          {opt.label}
        </option>
      ))}
    </select>
    <div class="select-arrow">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m6 9 6 6 6-6"/>
      </svg>
    </div>
  </div>
  {error && <p class="form-error">{error}</p>}
  {helperText && !error && <p class="form-helper">{helperText}</p>}
</div>

<style>
  .form-control {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
  }

  .required {
    color: var(--color-danger);
  }

  .select-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .form-select {
    appearance: none;
    padding: 0.5rem 2.5rem 0.5rem 0.75rem;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-text);
    width: 100%;
    transition: all 0.2s;
    cursor: pointer;
  }

  .form-select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
  }

  .form-select.has-error {
    border-color: var(--color-danger);
  }
  
  .form-select.has-error:focus {
    box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.2);
  }

  .form-select.is-disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .select-arrow {
    position: absolute;
    right: 0.75rem;
    pointer-events: none;
    color: var(--color-text-muted);
    display: flex;
  }

  .form-error {
    font-size: 0.875rem;
    color: var(--color-danger);
    margin: 0;
  }

  .form-helper {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
  }
</style>
