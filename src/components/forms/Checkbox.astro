---
interface Props {
  label: string;
  name: string;
  checked?: boolean;
  disabled?: boolean;
  className?: string;
}

const { 
  label, 
  name, 
  checked = false, 
  disabled = false,
  className = '' 
} = Astro.props;
---

<label class:list={['checkbox-wrapper', className]}>
  <input
    type="checkbox"
    id={name}
    name={name}
    checked={checked}
    disabled={disabled}
    class="checkbox-input"
  />
  <span class="checkbox-label">
    {label}
  </span>
</label>

<style>
  .checkbox-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    user-select: none;
  }

  .checkbox-input {
    width: 1rem;
    height: 1rem;
    border-radius: 0.25rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-surface-hover);
    accent-color: var(--color-primary);
    cursor: pointer;
  }

  .checkbox-input:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

  .checkbox-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    transition: color 0.2s;
  }

  .checkbox-wrapper:hover .checkbox-label {
    color: var(--color-text);
  }
</style>
