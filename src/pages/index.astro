---
import MainLayout from '@/components/ui/MainLayout.astro';
import { Button } from '@/components/ui/button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from '@/components/ui/card';
import { ArrowRight, Code, Settings, Zap, Check, Menu } from 'lucide-react';

const generators = [
  {
    id: 'playerkits',
    name: 'PlayerKits 2',
    description: 'Create advanced kit configurations with permissions, cooldowns, and display items.',
    version: '2.0+',
    difficulty: 'Intermediate',
    features: ['Items & Armor', 'Permissions', 'Cooldowns', 'Requirements'],
    url: '/generators/playerkits',
    color: 'from-blue-500/20 to-cyan-500/20',
    iconColor: 'text-blue-500',
    icon: Zap
  },
  {
    id: 'essentials',
    name: 'EssentialsX Kits',
    description: 'Standard kit generation for the most popular server essentials plugin.',
    version: 'Latest',
    difficulty: 'Easy',
    features: ['Basic Items', 'Enchantments', 'Cooldowns'],
    url: '#',
    disabled: true,
    color: 'from-red-500/20 to-orange-500/20',
    iconColor: 'text-red-500',
    icon: Settings
  },
  {
    id: 'deluxemenus',
    name: 'DeluxeMenus',
    description: 'Design complex GUI menus with conditions, actions, and placeholders.',
    version: 'Latest',
    difficulty: 'Advanced',
    features: ['GUI Layout', 'Click Actions', 'Conditions'],
    url: '#',
    disabled: true,
    color: 'from-green-500/20 to-emerald-500/20',
    iconColor: 'text-green-500',
    icon: Menu
  }
];
---

<MainLayout title="Minecraft Plugin Config Generator">
  <div class="mx-auto px-4 py-16 md:py-24 container">
    <!-- Hero Section -->
    <section class="space-y-6 mb-24 text-center">
      <div class="inline-flex items-center bg-secondary hover:bg-secondary/80 px-2.5 py-0.5 border border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 font-semibold text-secondary-foreground text-xs transition-colors">
        New: PlayerKits 2 Support
      </div>
      <h1 class="font-extrabold text-4xl lg:text-5xl tracking-tight">
        Generate <span class="bg-clip-text bg-linear-to-r from-blue-400 to-indigo-600 text-transparent">Plugin Configs</span>
        <br />
        Without The Headache
      </h1>
      <p class="mx-auto max-w-[600px] text-muted-foreground text-xl">
        Stop wrestling with YAML indentation. Use our visual tools to create error-free configurations for your favorite Spigot/Paper plugins.
      </p>
      <div class="flex justify-center gap-4 pt-4">
        <a href="/generators/playerkits">
          <Button size="lg" className="gap-2">
            Start Generating <ArrowRight className="w-4 h-4" />
          </Button>
        </a>
        <a href="https://github.com/HSinghHira/MCConfigGen" target="_blank" rel="noreferrer">
          <Button size="lg" variant="outline" className="gap-2">
            <Code className="w-4 h-4" /> View Source
          </Button>
        </a>
      </div>
    </section>

    <!-- Generators Grid -->
    <section class="mx-auto mb-24 max-w-6xl">
      <div class="mb-12 text-center">
        <h2 class="mb-4 font-bold text-3xl tracking-tight">Available Generators</h2>
        <p class="text-muted-foreground">Choose a plugin to start creating configurations</p>
      </div>
      
      <div class="gap-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {generators.map(gen => (
          <Card className="flex flex-col hover:shadow-lg border-muted/60 h-full transition-all duration-300">
            <CardHeader>
              <div class="flex items-center gap-4 mb-2">
                <div class={`p-3 rounded-lg bg-linear-to-br ${gen.color} ${gen.iconColor}`}>
                  <gen.icon className="w-6 h-6" />
                </div>
                <div>
                  <CardTitle className="text-xl">{gen.name}</CardTitle>
                  <span class="bg-secondary px-2 py-0.5 rounded-full font-medium text-secondary-foreground text-xs">
                    {gen.version}
                  </span>
                </div>
              </div>
              <CardDescription className="text-base">
                {gen.description}
              </CardDescription>
            </CardHeader>
            <CardContent className="grow">
              <ul class="space-y-2">
                {gen.features.map(feature => (
                  <li class="flex items-center gap-2 text-muted-foreground text-sm">
                    <Check className="w-4 h-4 text-green-500" />
                    {feature}
                  </li>
                ))}
              </ul>
            </CardContent>
            <CardFooter>
              <a href={gen.url} class="w-full">
                <Button 
                  variant={gen.disabled ? 'ghost' : 'default'} 
                  className="w-full"
                  disabled={gen.disabled}
                >
                  {gen.disabled ? 'Coming Soon' : 'Create Config'}
                </Button>
              </a>
            </CardFooter>
          </Card>
        ))}
      </div>
    </section>

    <!-- Features Section -->
    <section class="gap-8 grid grid-cols-1 md:grid-cols-3 pt-16 border-border border-t text-center">
      <div class="space-y-4 p-4">
        <div class="flex justify-center items-center bg-green-500/10 mx-auto rounded-full w-12 h-12 text-green-500">
          <Check className="w-6 h-6" />
        </div>
        <h3 class="font-bold text-xl">No Syntax Errors</h3>
        <p class="text-muted-foreground">Forget about YAML spacing issues. Our generators ensure valid output every time.</p>
      </div>
      <div class="space-y-4 p-4">
        <div class="flex justify-center items-center bg-blue-500/10 mx-auto rounded-full w-12 h-12 text-blue-500">
          <Settings className="w-6 h-6" />
        </div>
        <h3 class="font-bold text-xl">Visual Editors</h3>
        <p class="text-muted-foreground">Select items, enchantments, and colors using intuitive visual interfaces.</p>
      </div>
      <div class="space-y-4 p-4">
        <div class="flex justify-center items-center bg-purple-500/10 mx-auto rounded-full w-12 h-12 text-purple-500">
          <Code className="w-6 h-6" />
        </div>
        <h3 class="font-bold text-xl">Open Source</h3>
        <p class="text-muted-foreground">Free forever and open source. Contribute your own generators on GitHub.</p>
      </div>
    </section>
  </div>
</MainLayout>
